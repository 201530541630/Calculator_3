<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <EditText
        android:id="@+id/show_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="end|bottom"
        android:lines="1"
        android:inputType="text"
        android:layout_weight="2"
        android:background="#400040"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/show_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="end|bottom"
        android:lines="1"
        android:layout_weight="2.5"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:textAllCaps="false" />

    <LinearLayout
        android:id="@+id/line2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/sin_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="sin"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/cos_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="cos"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/tan_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="tan"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/delete_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="del"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/clear_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="clear"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/factorial_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="x!"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/left_bracket_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="("
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/right_bracket_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text=")"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/ln_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="ln x"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/multiply_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/number7_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/number8_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/number9_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/lg_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="lg x"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/divide_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/number4_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/number5_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/number6_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/power_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="x^y"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/add_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/number1_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/number2_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/number3_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/ex_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="e"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/subtract_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/percent_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="%"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/number0_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/point_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/PI_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="π"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/equal_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>